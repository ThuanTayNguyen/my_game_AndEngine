            </intent-filter>
        </activity>
        <activity
            android:name=".MenuGameActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".GameActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".HelpActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".OptionActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".HighScoreActivity"
            android:configChanges="orientation|screenSize" />
